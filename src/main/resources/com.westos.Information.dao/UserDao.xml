<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.westos.Information.dao.UserDao">
    <!--查找手机号-->
    <select id="sjhToUser" resultType="com.westos.Information.bean.User">
        select * from user where sjh=#{sjh}
    </select>
    <!--通过手机号，密码获取用户-->
    <select id="sjhAndPassToUser" resultType="com.westos.Information.bean.User">
        select * from user where sjh=#{sjh} and pass=#{pass}
    </select>
    <!--通过id获取用户-->
    <select id="idToUser" resultType="com.westos.Information.bean.User">
        select * from user where id=#{id}
    </select>
    <!--分页获取所有用户-->
    <select id="PaginationUserAll" resultType="com.westos.Information.bean.User">
        select * from user limit (#{start}-1)*#{limit},#{limit};
    </select>
    <!--添加用户-->
    <insert id="addUser" parameterType="com.westos.Information.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (sjh,name,csny,xb,zhlx,dq,qy_id,qy_name,bm_id,bm_name,pass)value (
        #{sjh},#{name},#{csny},#{xb},#{zhlx},#{dq},#{qy_id},#{qy_name},#{bm_id},#{bm_name},#{pass})
    </insert>
    <!--通过id修改用户-->
    <update id="modifyUser" parameterType="com.westos.Information.bean.User">
        update user
        <set>
            sjh=#{sjh},
            name=#{name},
            csny=#{csny},
            xb=#{xb},
            zhlx=#{zhlx},
            dq=#{dq},
            qy_id=#{qy_id},
            qy_name=#{qy_name},
            bm_id=#{bm_id},
            bm_name=#{bm_name},
            pass=#{pass}
        </set>
        <where>
            id=#{id}
        </where>
    </update>
    <!--通过id删除用户-->
    <delete id="deleteUser" parameterType="com.westos.Information.bean.User">
        delete from user where id=#{id}
    </delete>
</mapper>

